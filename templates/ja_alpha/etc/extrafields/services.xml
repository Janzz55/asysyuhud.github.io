<?xml version="1.0" encoding="utf-8"?>
<form>
<fields name="attribs">
    <fieldset name="extra-fields" label="TPL_GROUP_EXTRA_FIELDS_LABEL" description="" group="extrafields">
	    <field name="logo" type="media" label="TPL_ACTION_LOGO_LABEL" description="TPL_ACTION_LOGO_DESC"/>
	    <field name="mask" type="media" label="TPL_ACTION_BACKGROUND_LABEL" description="TPL_ACTION_BACKGROUND_DESC"/>
	    <field name="act-title" type="text" label="TPL_ACTION_TITLE_LABEL" description="TPL_ACTION_TITLE_DESC"/>
	    <field name="act-phone" type="text" label="TPL_ACTION_PHONE_LABEL" description="TPL_ACTION_PHONE_DESC"/>
	    <field name="act-desc" type="text" label="TPL_ACTION_DESC_LABEL" description="TPL_ACTION_DESC_DESC"/>
	    <field name="act-link-title" type="text" label="TPL_ACTION_LINK_TITLE_LABEL" description="TPL_ACTION_LINK_TITLE_DESC"/>
	    <field name="act-link" type="text" label="TPL_ACTION_LINK_LABEL" description="TPL_ACTION_LINK_DESC"/>

	    <field
				name="spacer"
				type="spacer"
				hr="true"
			/>

			<field name="faq-title" type="text" label="TPL_FAQ" description="TPL_FAQ_DESC"/>

	    <field
				name="faq-list"
				type="subform"
				label="TPL_FAQ_OPTIONS"
				description="TPL_FAQ_OPTIONS_DESC"
				layout="joomla.form.field.subform.repeatable-table"
				icon="list"
				multiple="true"
				class="no-row"
				>
				<form hidden="true" name="list-info-faq" repeat="true">
					<field
						name="faq_title"
						type="text"
						label="TPL_FAQ_TITLE_LABEL"
						description="TPL_FAQ_TITLE_DESC"
					/>

					<field
						name="faq_desc"
						type="text"
						label="TPL_FAQ_DESCRIPTIONS_LABEL"
						description="TPL_FAQ_DESCRIPTIONS_DESC"
					/>				
				</form>
			</field>

	    <!-- portfolio GALLERY -->
			 <field
				name="spacer2"
				type="spacer"
				hr="true"
			/>

	    <field name="clients-title" type="text" label="TPL_CLIENT_TITLE" description="TPL_CLIENT_DESC" filter="raw" />

	    <field name="clients-cols" type="list" label="ACM_COLUMNS_LABEL" description="ACM_COLUMNS_DESC">
				<option value="3">3</option>
				<option value="4">4</option>
			</field>

			<field
				name="client-list"
				type="subform"
				label="TPL_CLIENTS_LIST_OPTIONS"
				description="TPL_CLIENTS_LIST_OPTIONS_DESC"
				layout="joomla.form.field.subform.repeatable-table"
				icon="list"
				multiple="true"
				class="no-row"
				>
				<form hidden="true" name="list-info-client" repeat="true">
					<field
						name="client_img"
						type="media"
						label="TPL_CLIENTS_IMAGE_LABEL"
						description="TPL_CLIENTS_IMAGE_DESC"
					/>

					<field
						name="client_alt"
						type="text"
						label="TPL_CLIENTS_IMAGE_ALT_LABEL"
						description="TPL_CLIENTS_ALT_IMAGE_DESC"
						default="intro"
					/>	

					<field
						name="client_link"
						type="text"
						label="TPL_CLIENTS_LINK_LABEL"
						description="TPL_CLIENTS_LINK_DESC"
					/>			
				</form>
			</field>
    </fieldset>
  </fields>
</form>
